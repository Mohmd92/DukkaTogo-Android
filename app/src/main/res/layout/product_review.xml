<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <FrameLayout
        android:id="@+id/frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <LinearLayout
                android:background="@drawable/button125"
                android:layout_width="190dp"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/tool_bar_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginStart="10dp"
            android:textAllCaps="true"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/blackTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lg.washing"/>
        <view
            android:layout_marginTop="20dp"
            android:id="@+id/sliderLayout"
            class="com.yihsian.slider.library.SliderLayout"
            id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="230dp" />
    </LinearLayout>

    </FrameLayout>
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="15sp"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="LG Washer Front Load V3-S9XTW 9kg VCM"/>
            <TextView
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="500$"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RatingBar
                android:layout_marginTop="2dp"
                android:id="@+id/ratingBar2"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:clickable="false"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.1"
                android:theme="@style/CustomRatingBar"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="13sp"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="PRODUCT ID 43477
BRANDS: LG
PRODUCT CODE: V3-S9XTW
EXPRESS DELIVERY (1-3 BUSINESS DAYS)
RETURN AND CANCELLATION POLICY"/>
            <TextView
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:background="@drawable/button55"
                android:layout_width="0dp"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/imge_S"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_buy2"/>
                <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/abudhbi_regular"
                    android:text="@string/add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginStart="5dp"
                android:background="@drawable/button3113"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_heart"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:background="@drawable/button3113"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">
            <TextView
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"/>
            <ImageView
                android:rotation="90"
                android:tint="@color/text_dark"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:background="@drawable/button3113"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">
            <TextView
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/customer_reviews"/>
            <ImageView
                android:tint="@color/text_dark"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/similar_products"/>
        <com.dukan.dukkan.util.HorizontalListView
            android:id="@+id/HorizontalListView"
            android:layout_marginBottom="430dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>