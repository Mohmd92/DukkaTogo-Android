<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
       >
    <ImageView
            android:id="@+id/imageeee"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_line_3"
            />
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abudhbi_bold"
        android:id="@+id/textView0"
        android:layout_marginTop="10dp"
        android:text="@string/filter_latest_offers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageeee"
        android:textSize="15sp"
        />

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView0"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:text="@string/categories"
            android:textSize="14sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/button3113"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">
        <Spinner
            android:background="@color/white"
            android:imeOptions="actionNext"
            android:id="@+id/spinner_country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/textView0"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abudhbi_regular"
                    android:layout_marginTop="10dp"
                    android:text="@string/price"
                    android:textSize="14sp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textMin1"
                        android:textColor="@color/blackTheme_colorTintedBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abudhbi_regular"
                        android:layout_marginTop="10dp"
                        android:text="1$"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/textMax1"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/blackTheme_colorTintedBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abudhbi_regular"
                        android:layout_marginTop="10dp"
                        android:text="1000$"
                        android:textSize="13sp"/>
                </RelativeLayout>
        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:layout_marginTop="5dp"
            android:id="@+id/rangeSeekbar1"
            android:layout_marginBottom="10dp"
            app:bar_color="#D5D5E0"
            app:corner_radius="2"
            app:min_value="1"
            app:max_value="1000"
            app:steps="1"
            app:bar_highlight_color="@color/colorPrimary"
            app:left_thumb_color="@color/colorPrimary"
            app:right_thumb_color="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:fontFamily="@font/abudhbi_bold"
            android:layout_marginTop="10dp"
            android:id="@+id/confirm_button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/filter"
            android:background="@drawable/button33"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>