<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".activity.MainActivity">


    <LinearLayout
        android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_the_fingerprint"/>
        <TextView
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:textColor="@color/darkTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_select_the_required_category_in_order_to_obtain_the_required"/>
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_fingerprint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@font/abudhbi_regular"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textSize="13sp"
            android:textColor="@color/darkTheme_colorBackground"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="@string/please_select_the_required_category_in_order_to_obtain_the_required"/>
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_fingerprint_svgrepo_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:fontFamily="@font/abudhbi_bold"
            android:layout_marginTop="30dp"
            android:id="@+id/confirm_button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/confirm"
            android:background="@drawable/button33"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>