<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linnnar"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button133"
            android:id="@+id/relative"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAllCaps="true"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:textAllCaps="true"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="15sp"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23/03/2022"/>
         </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/relative"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button133"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price For 3 Item(s)"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500$"/>
    </RelativeLayout>
    <ScrollView
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/relative2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestActivity">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
