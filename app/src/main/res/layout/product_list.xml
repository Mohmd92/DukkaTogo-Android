<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <LinearLayout
        android:id="@+id/frame"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"
            android:textAllCaps="true"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/products_list"/>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_group_12492"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="8dp"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="15sp"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abou Ghazi Market"/>
        </LinearLayout>
        <com.dukan.dukkan.util.HorizontalListView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/view_all"
                android:textColor="@color/darkTheme_colorBackground"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/most_wanted"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <com.dukan.dukkan.util.HorizontalListView
            android:id="@+id/HorizontalListView3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/view_all"
                android:textColor="@color/darkTheme_colorBackground"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/new_products"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <com.dukan.dukkan.util.HorizontalListView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/view_all"
                android:textColor="@color/darkTheme_colorBackground"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/latest_offers"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <com.dukan.dukkan.util.HorizontalListView
            android:layout_marginBottom="250dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>