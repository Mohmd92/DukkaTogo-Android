<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".activity.MainActivity">
    <ScrollView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".TestActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:padding="5dp"
            android:id="@+id/img_back"
            android:src="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password"/>
        <TextView
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/darkTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_you_want_more_information_read_the_attribution_guide_license"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_change_pass"/>
        <TextView
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_password"/>
        <EditText
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:id="@+id/edit_password"
            android:background="@drawable/button133"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#aeafaf"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:textSize="14sp"/>
        <TextView
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_password"/>
        <EditText
            android:id="@+id/edit_new_password"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:background="@drawable/button133"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#aeafaf"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:textSize="14sp"/>
        <TextView
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_password"/>
        <EditText
            android:id="@+id/edit_new_password2"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:background="@drawable/button133"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#aeafaf"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:textSize="14sp"/>
        <Button
            android:fontFamily="@font/abudhbi_bold"
            android:layout_marginTop="30dp"
            android:id="@+id/button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/change_password"
            android:background="@drawable/button33"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>