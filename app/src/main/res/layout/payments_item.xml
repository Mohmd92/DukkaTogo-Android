<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/constraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/rel_cash"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/image_cash"
            android:src="@drawable/card_cash"
            android:layout_width="wrap_content"
            android:layout_height="28dp"/>
        <TextView
            android:id="@+id/payment_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/image_cash"
            android:textAllCaps="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="12sp"
            android:textColor="@color/blackTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cash"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_chk"
            android:src="@drawable/ic_unchek"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
