<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <include
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:textAllCaps="true"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TestActivity">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.github.siyamed.shapeimageview.RoundedImageView
                app:siBorderWidth="0dp"
                app:siBorderColor="@color/white"
                android:layout_gravity="center"
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitCenter"
                app:siRadius="90dp" />
            <LinearLayout
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_prod" />
                    <TextView
                        android:id="@+id/tv_num_products"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/abudhbi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:gravity="top"
                        android:layout_gravity="center"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product"/>
                </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/lineee"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:id="@+id/liner_midle"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star" />
                    <TextView
                        android:id="@+id/tv_rating_num"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/abudhbi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:gravity="top"
                        android:layout_gravity="center"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/evaluation"/>
                </LinearLayout>
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/lineee"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic___user" />
                    <TextView
                        android:id="@+id/tv_customer_num"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/abudhbi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <TextView
                        android:gravity="top"
                        android:layout_gravity="center"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <RelativeLayout
                android:id="@+id/rel_product_list"
                android:layout_marginEnd="5dp"
                android:layout_weight="4"
                android:background="@drawable/button33"
                android:layout_width="0dp"
                android:layout_height="45dp">
                <TextView
                    android:layout_centerInParent="true"
                    android:gravity="top"
                    android:layout_gravity="center"
                    android:fontFamily="@font/abudhbi_bold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/products_list"
                    />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_rating"
                android:background="@drawable/button3113"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:background="@drawable/button3113"
                android:layout_weight="1"
                android:id="@+id/card_chat"
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chat"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <view
                android:layout_marginTop="10dp"
                android:id="@+id/sliderLayout"
                class="com.yihsian.slider.library.SliderLayout"
                id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="170dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_information"/>

 <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="42dp">
         <androidx.cardview.widget.CardView
             android:layout_gravity="start"
             android:background="@drawable/button3113"
             android:layout_marginEnd="5dp"
             android:layout_weight="5"
             android:layout_width="0dp"
             android:layout_height="40dp"
             app:cardCornerRadius="5dp"
             app:cardElevation="2dp"
             app:contentPadding="0dp">
         <TextView
             android:id="@+id/tv_number"
             android:layout_marginStart="10dp"
             android:layout_gravity="center_vertical"
             android:fontFamily="@font/abudhbi_regular"
             android:textSize="13sp"
             android:textColor="@color/blackTheme_colorBackground"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"/>
         </androidx.cardview.widget.CardView>
     <RelativeLayout
         android:id="@+id/rel_call"
         android:layout_marginStart="5dp"
         android:layout_weight="1"
         android:background="@drawable/button33"
         android:layout_width="0dp"
         android:layout_height="40dp">
         <ImageView
             android:tint="@color/white"
             android:layout_centerInParent="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_calling"/>
     </RelativeLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="start"
                    android:background="@drawable/button3113"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:contentPadding="0dp">
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                 </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:id="@+id/rel_map"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button33"
                    android:layout_width="0dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_location"/>
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_marginBottom="120dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rel_facebook"
                    android:layout_weight="1"
                    android:background="@drawable/button33"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_facebook"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_instagram"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button33"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_instagram"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_whatsapp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button33"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_whatsapp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_twitter"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button33"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_twitter"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_telegram"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button33"
                    android:layout_width="0dp"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_telegram"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <ProgressBar
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>