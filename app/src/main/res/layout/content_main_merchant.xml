<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <RelativeLayout
        android:id="@+id/rellll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginStart="16dp"
            android:outlineProvider="background"
            android:visibility="visible"
            android:background="@drawable/button3"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:id="@+id/imag"
            android:layout_width="71dp"
            android:layout_height="71dp"
              />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imag"
            android:id="@+id/header_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/abudhbi_bold"
            android:textColor="@color/colorPrimary"
             />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/header_tv_user_name"
            android:layout_toEndOf="@+id/imag"
            android:layout_marginStart="10dp"
            android:id="@+id/tv_desc"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/happy_shop_owner"
            android:textColor="@color/darkTheme_colorBackground"
            android:textSize="13sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/rellll"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/working_hours"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/button33"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_day"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_time_from_work"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_from_work_to_completion"/>
            <TextView
                android:id="@+id/tv_working_hours"
                android:layout_marginTop="9sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_gravity="start"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">
            <ImageView
                android:id="@+id/img_store"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_view_all"
                android:text="@string/view_all"
                android:textColor="@color/darkTheme_colorBackground"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/latest_orders"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TestActivity">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        </ScrollView>
    </LinearLayout>
    <ProgressBar
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>