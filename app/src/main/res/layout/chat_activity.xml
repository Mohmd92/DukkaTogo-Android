<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:padding="5dp"
            android:id="@+id/img_back"
            android:src="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/frame"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:fontFamily="@font/abudhbi_bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moahmmed "/>
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="12sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        tools:ignore="SmallSp" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/frame"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:maxWidth="50dp"
                        android:maxHeight="50dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/user"
                        app:shapeAppearance="?attr/actionButtonStyle"
                        app:shapeAppearanceOverlay="@style/imageViewRounded"
                        app:strokeColor="@android:color/white" />
                    <ImageView
                        android:id="@+id/img_profile_status"
                        android:layout_marginEnd="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_connect" />

                </RelativeLayout>

            </RelativeLayout>


        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_no_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/abudhbi_regular"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_messages"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".TestActivity">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_chat_option"
        android:layout_marginBottom="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/rel_new_chat"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button16"
        android:layout_width="40dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_file"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_paper"/>
        <ImageView
            android:id="@+id/img_photo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:tint="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_imagess"/>
        <ImageView
            android:id="@+id/img_voice"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_voice_2"/>
            <ImageView
                android:id="@+id/img_camera"
                android:layout_weight="1"
                android:tint="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/ic_camera"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="25dp"
        android:id="@+id/rel_new_chat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RelativeLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="7dp"
            android:id="@+id/rel_category"
            android:padding="5dp"
            android:background="@drawable/button16"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/img_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_category"/>
            <ImageView
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"/>
        </RelativeLayout>

        <EditText
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rel_send"
            android:layout_toEndOf="@+id/rel_category"
            android:id="@+id/edit_chat_text"
            android:fontFamily="@font/abudhbi_regular"
            android:imeOptions="actionNext"
            android:background="@drawable/edit_shap3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColorHint="#aeafaf"
            android:hint="@string/type_something"
            android:inputType="text"
            android:textSize="14sp"/>
        <RelativeLayout
            android:layout_marginStart="7dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/rel_send"
            android:padding="5dp"
            android:background="@drawable/button16"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/img_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>