<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_linear2"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="20dp"
       >
    <ImageView
            android:id="@+id/imageeee"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_line_3"
            />
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abudhbi_bold"
        android:id="@+id/textView0"
        android:layout_marginTop="10dp"
        android:text="@string/filter_orders"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageeee"
        android:textSize="15sp"
        />

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView0"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:text="@string/first_date"
            android:textSize="14sp"
            />
        <TextView
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_calendar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/process_date"
            android:background="@drawable/edit_shap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#aeafaf"
            android:hint="14/9/1997"
            android:fontFamily="@font/abudhbi_regular"
            android:textSize="13sp"/>
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:text="@string/second_date"
            android:textSize="14sp"
            />
        <TextView
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_calendar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/process_date2"
            android:background="@drawable/edit_shap"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="#aeafaf"
            android:hint="14/9/1997"
            android:fontFamily="@font/abudhbi_regular"
            android:textSize="13sp"/>
        <Button
            android:fontFamily="@font/abudhbi_bold"
            android:layout_marginTop="10dp"
            android:id="@+id/confirm_button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/filter"
            android:background="@drawable/button33"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>