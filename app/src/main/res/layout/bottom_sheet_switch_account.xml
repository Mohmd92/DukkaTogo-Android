<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
       >
    <ImageView
            android:id="@+id/imageeee"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_line_3"
            />
    <LinearLayout
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageeee"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abudhbi_bold"
            android:id="@+id/textView0"
            android:text="@string/choose_category"
            android:textSize="18sp"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blackTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abudhbi_regular"
            android:text="@string/please_select_the_required_category_in_order_to_obtain_the_required"
            android:textSize="15sp" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rel_customer"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abudhbi_regular"
                android:text="@string/customer"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/img_customer"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/countss"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rel_merchant"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abudhbi_regular"
                android:text="@string/merchant"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/img_merchant"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_unchek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:background="@color/countss"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/rel_driver"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abudhbi_regular"
                android:text="@string/driver"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/img_driver"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_unchek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <Button
            android:layout_marginTop="20dp"
            android:fontFamily="@font/abudhbi_bold"
            android:id="@+id/confirm_button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/confirm"
            android:background="@drawable/button33"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>