<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".activity.MainActivity">
    <include
        android:id="@+id/layerr"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/tool_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/layerr"
        android:id="@+id/linear"
        android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:id="@+id/tv_day"
            android:textAllCaps="true"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_code"/>
        <TextView
            android:id="@+id/tv_sub_title"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/darkTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_you_want_more_information_read_the_attribution_guide_license"/>

        <ImageView
            android:id="@+id/imag"
            android:layout_marginTop="36dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mask_group_25"/>
        <androidx.cardview.widget.CardView
            android:background="@color/white"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">
            <RelativeLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:background="@drawable/button3113"
                    android:id="@+id/edit_street"
                    android:fontFamily="@font/abudhbi_regular"
                    android:imeOptions="actionNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#aeafaf"
                    android:hint="C-00000"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"/>
                <ImageView
                    android:id="@+id/image_status"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_true1"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/discount_percentage"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/section_selection"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <Spinner
                    android:textSize="16sp"
                    android:id="@+id/spinner_discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/background"
                android:orientation="horizontal">

                <Spinner
                    android:textSize="16sp"
                    android:id="@+id/spinner_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/starting_date"/>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/expiry_date"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_open"
                android:background="@color/white"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">
                <RelativeLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_starting_date"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/03/2021"/>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_close"
                android:background="@color/white"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:contentPadding="0dp">
                <RelativeLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_expiry_date"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03/03/2021"/>
                    <ImageView
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_calendar"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <Button
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/abudhbi_bold"
            android:layout_marginTop="20dp"
            android:id="@+id/confirm_button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/ok"
            android:background="@drawable/button33"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>