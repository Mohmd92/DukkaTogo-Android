<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MainActivity">
<LinearLayout
    android:layout_margin="10dp"
    android:background="@drawable/button133"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/title_advertisement1"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="15sp"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:id="@+id/desc_advertisement1"
                android:layout_below="@+id/title_advertisement1"
                android:layout_marginStart="5dp"
                android:textAllCaps="true"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="9sp"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="  "/>
        </RelativeLayout>


    </RelativeLayout>
    <ImageView
        android:layout_weight="2"
        android:id="@+id/image_advertisement1"
        android:layout_marginEnd="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>