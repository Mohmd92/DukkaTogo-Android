<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".activity.MainActivity">
    <ScrollView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
            android:src="@drawable/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/languages"/>
        <TextView
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/darkTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_you_want_more_information_read_the_attribution_guide_license"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mask_group_2"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:id="@+id/img"
                android:layout_gravity="end|center_vertical"
                android:layout_width="32dp"
                android:layout_height="23dp"
                android:src="@drawable/suadi"/>
            <TextView
                android:layout_toEndOf="@+id/img"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/arabia"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unchek"/>
        </RelativeLayout>
        <View
            android:id="@+id/viewss"
            android:background="@color/classic_colorTintedBackground"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:id="@+id/img2"
                android:layout_gravity="end|center_vertical"
                android:layout_width="32dp"
                android:layout_height="23dp"
                android:src="@drawable/england"/>
            <TextView
                android:layout_toEndOf="@+id/img2"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/english"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check"/>
        </RelativeLayout>
        <View
            android:background="@color/classic_colorTintedBackground"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:id="@+id/img3"
                android:layout_gravity="end|center_vertical"
                android:layout_width="32dp"
                android:layout_height="23dp"
                android:src="@drawable/germany"/>
            <TextView
                android:layout_toEndOf="@+id/img3"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/german"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unchek"/>
        </RelativeLayout>
        <View
            android:background="@color/classic_colorTintedBackground"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:id="@+id/img4"
                android:layout_gravity="end|center_vertical"
                android:layout_width="32dp"
                android:layout_height="23dp"
                android:src="@drawable/italy"/>
            <TextView
                android:layout_toEndOf="@+id/img4"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/italian"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unchek"/>
        </RelativeLayout>
        <View
            android:background="@color/classic_colorTintedBackground"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:id="@+id/img5"
                android:layout_gravity="end|center_vertical"
                android:layout_width="32dp"
                android:layout_height="23dp"
                android:src="@drawable/turky"/>
            <TextView
                android:layout_toEndOf="@+id/img5"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/turkish"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_unchek"/>
        </RelativeLayout>
        <View
            android:background="@color/classic_colorTintedBackground"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

</LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>