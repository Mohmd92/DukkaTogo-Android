<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".activity.MainActivity">
    <include
        android:id="@+id/layerr"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layerr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:textAllCaps="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support_help"
            tools:ignore="AllCaps" />
        <TextView
            android:id="@+id/tv_sub_title"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/darkTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_you_want_more_information_read_the_attribution_guide_license"/>

        <ImageView
            android:id="@+id/imag"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mask_group_4"/>
        <TextView
            android:id="@+id/tv22"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="15sp"
            android:textColor="@color/blackTheme_colorBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/direct_contact_with_technical_support"/>
        <LinearLayout
            android:id="@+id/linear_call"
            android:layout_marginTop="10dp"
            android:background="@drawable/button12"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:tint="@color/white"
                android:layout_marginStart="14dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calling"/>
            <View
                android:layout_marginStart="14dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginStart="14dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/direct_number"/>
            <TextView
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1700 - 600 - 8000"/>
        </LinearLayout>
        <TextView
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"/>
        <TextView
            android:id="@+id/tv_sub_title2"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:textColor="@color/darkTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_you_want_more_information_read_the_attribution_guide_license"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            android:background="@drawable/button3113"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/text1"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/abudhbi_bold"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/refrigerator"/>
            <ImageView
                android:id="@+id/img_ref"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:rotation="90"
                android:tint="@color/text_dark"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:visibility="gone"
                        android:id="@+id/viewss1"
                        android:background="@color/countss"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_ref"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="It is important for us at Sbitany to make the purchasing process as easy as possible for you. For that reason we have created a few buying guides to help guide you before making your decision."/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:background="@drawable/button3113"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text3"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/abudhbi_bold"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/dishwasher"/>
                <ImageView
                    android:id="@+id/img_dish"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:rotation="90"
                    android:tint="@color/text_dark"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:visibility="gone"
                        android:id="@+id/viewss2"
                        android:background="@color/countss"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_dish"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="It is important for us at Sbitany to make the purchasing process as easy as possible for you. For that reason we have created a few buying guides to help guide you before making your decision."/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button3113"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:contentPadding="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/text2"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/abudhbi_bold"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/washing_machine"/>
                <ImageView
                    android:id="@+id/img_wash"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentEnd="true"
                    android:rotation="90"
                    android:tint="@color/text_dark"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_next"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:visibility="gone"
                        android:id="@+id/viewss3"
                        android:background="@color/countss"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tv_wash"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="13sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="It is important for us at Sbitany to make the purchasing process as easy as possible for you. For that reason we have created a few buying guides to help guide you before making your decision."/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>