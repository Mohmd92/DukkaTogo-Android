<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="25dp"
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_page"/>
        <com.dukan.dukkan.util.HorizontalListView
            android:id="@+id/HorizontalListView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/relative3"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/view_all"
                android:textColor="@color/darkTheme_colorBackground"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/stores"
                android:id="@+id/txt2"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <com.dukan.dukkan.util.HorizontalListView
            android:id="@+id/HorizontalListView2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
<include
    layout="@layout/home_ads"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="180dp">
</include>
        <RelativeLayout
            android:id="@+id/relative4"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/view_all"
                android:textColor="@color/darkTheme_colorBackground"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/most_wanted"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <com.dukan.dukkan.util.HorizontalListView
            android:id="@+id/HorizontalListView3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
        <RelativeLayout
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button11"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/wqq2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:id="@+id/relative5"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/view_all"
                android:textColor="@color/darkTheme_colorBackground"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="@string/new_products"
                android:id="@+id/txt2w"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <com.dukan.dukkan.util.HorizontalListView
            android:id="@+id/HorizontalListViewe"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:paddingStart="20dp"
            tools:ignore="RtlSymmetry" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="@string/worldwide_trademark"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <com.dukan.dukkan.util.HorizontalListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="@string/delivery_companies"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <com.dukan.dukkan.util.HorizontalListView
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry" />
    </LinearLayout>

</ScrollView>
