<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".activity.MainActivity">
    <include
        android:id="@+id/layerr"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TestActivity">
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/layerr"
        android:id="@+id/linear"
        android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <TextView
            android:textAllCaps="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"/>
    <LinearLayout
        android:id="@+id/linear_exist_account"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="105dp"
            android:layout_height="97dp">
        <ImageView
            android:id="@+id/img_profile"
            android:outlineProvider="background"
            android:background="@drawable/button3"
            android:layout_width="97dp"
            android:layout_height="97dp"
              />
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_profile_true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:outlineProvider="background"
                android:background="@drawable/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group_12593" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:fontFamily="@font/abudhbi_bold"
            android:textColor="@color/colorPrimary"
             />
        <LinearLayout
            android:id="@+id/linner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:outlineProvider="background"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location2" />
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tv_location"
                android:fontFamily="@font/abudhbi_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkTheme_colorBackground"
                android:textSize="13sp" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rel_licences"
            android:layout_marginTop="33dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/button21"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="125dp">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/abudhbi_bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driving_license_number"/>

                <TextView
                    android:id="@+id/tv_driving_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/abudhbi_regular"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/abudhbi_bold"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/affiliation_date"/>
                <TextView
                    android:id="@+id/tv_affiliation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/abudhbi_regular"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
            <ImageView
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/delv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:id="@+id/card_personal_info"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:contentPadding="0dp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/abudhbi_regular"
                android:textSize="15sp"
                android:textColor="@color/blackTheme_colorBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_information"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:id="@+id/card_driving_data"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:contentPadding="0dp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delivery22"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/abudhbi_regular"
                    android:textSize="15sp"
                    android:textColor="@color/blackTheme_colorBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driving_data"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:visibility="gone"
            android:layout_marginBottom="150dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/abudhbi_bold"
            android:layout_marginTop="20dp"
            android:id="@+id/invite_button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/invite"
            android:background="@drawable/button33"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_no_account"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mask_group_16"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/abudhbi_regular"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_profile"/>
        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/abudhbi_regular"
            android:textSize="12sp"
            android:textColor="@color/blackTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_you_want_more_information_read_the_attribution_guide_license"/>
        <Button
            android:layout_gravity="center"
            android:fontFamily="@font/abudhbi_bold"
            android:layout_marginTop="20dp"
            android:id="@+id/confirm_button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/sign_in"
            android:background="@drawable/button33"
            android:layout_width="200dp"
            android:layout_height="45dp"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <ProgressBar
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>