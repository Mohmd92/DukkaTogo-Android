<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linnnar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:contentPadding="0dp">

            <RelativeLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_discount_id"
                        android:fontFamily="@font/abudhbi_bold"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#14555"/>
                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/abudhbi_regular"
                        android:textSize="11sp"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On All Sections Of The Store"
                        tools:ignore="SmallSp" />
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/abudhbi_bold"
                            android:textSize="11sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/starting_date"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:id="@+id/tv_starting_date"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/abudhbi_regular"
                            android:textSize="11sp"
                            android:textColor="@color/blackTheme_colorBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03/03/2021"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:fontFamily="@font/abudhbi_bold"
                            android:textSize="11sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expiry_date"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:id="@+id/tv_expiry_date"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/abudhbi_regular"
                            android:textSize="11sp"
                            android:textColor="@color/blackTheme_colorBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03/03/2021"
                            tools:ignore="SmallSp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_edit"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_edit_square"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
