<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
    android:background="@color/white"
       >
    <ImageView
            android:id="@+id/imageeee"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_line_3"
            />
    <LinearLayout
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageeee"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="start"
            android:gravity="start"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abudhbi_bold"
            android:id="@+id/textView0"
            android:text="@string/review"
            android:textSize="18sp"
            />
        <EditText
            android:gravity="top"
            android:fontFamily="@font/abudhbi_regular"
            android:layout_marginTop="10dp"
            android:imeOptions="actionNext"
            android:padding="10dp"
            android:id="@+id/edit_review"
            android:background="@drawable/button313"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:textColorHint="#aeafaf"
            android:hint="@string/write_your_opinion"
            android:inputType="text"
            android:textSize="12sp"/>
        <RatingBar
            style="?android:attr/ratingBarStyle"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ratingBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:numStars="5"
            android:stepSize="0.1"
            android:theme="@style/CustomRatingBar"/>
        <Button
            android:fontFamily="@font/abudhbi_bold"
            android:layout_marginTop="10dp"
            android:id="@+id/confirm_button"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/ok"
            android:background="@drawable/button33"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>