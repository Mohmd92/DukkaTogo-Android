<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/linnnar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/rellll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_address_name"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/abudhbi_bold"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home 01"/>
        <TextView
            android:layout_marginEnd="7dp"
            android:id="@+id/tv_change"
            android:layout_centerVertical="true"
            android:fontFamily="@font/abudhbi_regular"
            android:textSize="15sp"
            android:textColor="@color/blackTheme_colorBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_toStartOf="@+id/img_delete"
            android:text="@string/edit"/>
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img_delete"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/rellll"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/button3113"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:scaleType="fitCenter"
                android:src="@drawable/map" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:gravity="center_vertical"
                        android:tint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_location2" />
                    <TextView
                        android:id="@+id/tv_address"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/abudhbi_regular"
                        android:text="Please Enter Correct Mobile"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:gravity="center_vertical"
                        android:tint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_profile" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/abudhbi_regular"
                        android:text="Mohammed "
                        android:textColor="@color/blackTheme_colorBackground"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:gravity="center_vertical"
                        android:tint="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calling2" />
                    <TextView
                        android:id="@+id/tv_mobile"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/abudhbi_regular"
                        android:text="009720 000 0000"
                        android:textColor="@color/blackTheme_colorBackground"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
